{
  "name": "velo-filesystem",
  "title": "Velo Filesystem",
  "version": "0.1.0",
  "description": "Chrome extension for managing the virtual file system in Velo by Wix",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "lint": "svelte-check && eslint 'src/**/*.{js,ts,svelte}' && stylelint 'src/**/*.svelte'",
    "lint:fix": "eslint 'src/**/*.{js,ts,svelte}' --fix && stylelint 'src/**/*.svelte' --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/chrome": "^0.0.149",
    "@types/wicg-file-system-access": "^2020.9.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-plugin-const-enum": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "fs-extra": "^10.0.0",
    "monaco-editor": "^0.26.1",
    "rollup": "^2.55.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.5.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "^3.41.0",
    "svelte-check": "^2.2.3",
    "svelte-preprocess": "^4.7.4",
    "typescript": "^4.3.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:fix && npx svelte-check"
  },
  "homepage": "https://github.com/shoonia/velo-filesystem",
  "author": {
    "name": "Alexander Zaytsev",
    "email": "alexanderz@wix.com",
    "url": "https://twitter.com/_shoonia"
  },
  "private": false,
  "license": "MIT"
}
