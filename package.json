{
  "name": "velo-filesystem",
  "title": "Velo Filesystem",
  "version": "0.2.5",
  "description": "Chrome extension for managing the virtual file system in Velo by Wix",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "lint": "tsc && svelte-check && eslint 'src/**/*.{js,ts,svelte}' && stylelint 'src/**/*.svelte'",
    "lint:fix": "eslint 'src/**/*.{js,ts,svelte}' --fix && stylelint 'src/**/*.svelte' --fix",
    "zip": "npm run build && node zip.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "dependencies": {
    "@storeon/svelte": "^1.0.0",
    "storeon": "^3.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-typescript": "^7.17.12",
    "@jest/types": "^28.1.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chrome": "^0.0.190",
    "@types/jest": "^28.1.1",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-plugin-const-enum": "^1.2.0",
    "cross-zip": "^4.0.0",
    "eslint": "^8.17.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "fs-extra": "^10.1.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "monaco-editor": "^0.33.0",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "postcss-import": "^14.1.0",
    "rollup": "^2.75.6",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npx tsc && npx svelte-check"
  },
  "homepage": "https://github.com/shoonia/velo-filesystem",
  "discussions": "https://github.com/shoonia/velo-filesystem/discussions",
  "author": {
    "name": "Alexander Zaytsev",
    "email": "alexanderz@wix.com",
    "url": "https://twitter.com/_shoonia"
  },
  "private": false,
  "license": "MIT"
}
