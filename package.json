{
  "name": "velo-filesystem",
  "title": "Velo Filesystem",
  "version": "0.2.0",
  "description": "Chrome extension for managing the virtual file system in Velo by Wix",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "lint": "tsc && svelte-check && eslint 'src/**/*.{js,ts,svelte}' && stylelint 'src/**/*.svelte'",
    "lint:fix": "eslint 'src/**/*.{js,ts,svelte}' --fix && stylelint 'src/**/*.svelte' --fix",
    "zip": "npm run build && node zip.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "dependencies": {
    "@storeon/svelte": "^1.0.0",
    "storeon": "^3.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/chrome": "^0.0.158",
    "@types/jest": "^27.0.2",
    "@types/wicg-file-system-access": "^2020.9.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-plugin-const-enum": "^1.1.0",
    "cross-zip": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.4",
    "monaco-editor": "^0.28.1",
    "rollup": "^2.58.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.6.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "^3.43.1",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.7",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:fix && npx tsc && npx svelte-check"
  },
  "homepage": "https://github.com/shoonia/velo-filesystem",
  "author": {
    "name": "Alexander Zaytsev",
    "email": "alexanderz@wix.com",
    "url": "https://twitter.com/_shoonia"
  },
  "private": false,
  "license": "MIT"
}
