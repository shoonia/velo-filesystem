{
  "name": "velo-filesystem",
  "title": "Velo Filesystem",
  "version": "0.2.3",
  "description": "Chrome extension for managing the virtual file system in Velo by Wix",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "lint": "tsc && svelte-check && eslint 'src/**/*.{js,ts,svelte}' && stylelint 'src/**/*.svelte'",
    "lint:fix": "eslint 'src/**/*.{js,ts,svelte}' --fix && stylelint 'src/**/*.svelte' --fix",
    "zip": "npm run build && node zip.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "dependencies": {
    "@storeon/svelte": "^1.0.0",
    "storeon": "^3.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/types": "^27.4.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-replace": "^3.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chrome": "^0.0.174",
    "@types/jest": "^27.4.0",
    "@types/wicg-file-system-access": "^2020.9.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "babel-plugin-const-enum": "^1.2.0",
    "cross-zip": "^4.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.6",
    "monaco-editor": "^0.31.1",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-import": "^14.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "svelte": "^3.44.3",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npx tsc && npx svelte-check"
  },
  "homepage": "https://github.com/shoonia/velo-filesystem",
  "discussions": "https://github.com/shoonia/velo-filesystem/discussions",
  "author": {
    "name": "Alexander Zaytsev",
    "email": "alexanderz@wix.com",
    "url": "https://twitter.com/_shoonia"
  },
  "private": false,
  "license": "MIT"
}
