{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "sourceMap": false,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom-runtime",
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "static/*",
    "build/*"
  ]
}
